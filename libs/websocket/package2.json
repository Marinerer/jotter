{
	"name": "@jotter/websocket",
	"version": "1.2.4",
	"description": "Modern and useful WebSocket wrapper, with standard WebSocket API. Supports reconnection, keep alive and exception message handling.",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"unpkg": "dist/index.global.js",
	"jsdelivr": "dist/index.global.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.esm.js",
			"types": "./dist/index.d.ts"
		},
		"./*": "./*"
	},
	"files": ["dist"],
	"scripts": {
		"clean": "rimraf -rf ./dist",
		"test": "jest --coverage",
		"build:rollup": "pnpm run clean && NODE_ENV=production rollup -c rollup.config.mjs",
		"doc": "npx typedoc --plugin typedoc-plugin-markdown --out _docs src/types.ts src/index.ts",
		"server": "node ./src/server.js"
	},
	"keywords": [
		"websocket",
		"ws",
		"socket",
		"websocket client",
		"WebSocketConnect",
		"reconnecting",
		"websocket connect",
		"reconnect websocket",
		"websocket keep alive"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"homepage": "https://github.com/Marinerer/jotter/tree/main/libs/websocket",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Marinerer/jotter.git"
	},
	"author": "lmq <mengqing723@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"ws": "^7.5.9"
	},
	"bugs": {
		"url": "https://github.com/Marinerer/jotter/issues"
	}
}
